{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "youtubedesktop",
  "version": "0.1.0",
  "identifier": "com.bootfloppy.youtube",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "userAgent": "Roku/DVP-12.0",
        "title": "YouTube",
        "width": 960,
        "height": 540,
        "url": "https://youtube.com/tv"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
